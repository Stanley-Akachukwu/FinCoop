<div class="p-4 mb-4 bg-white rounded-lg shadow sm:p-6 xl:p-8 dark:bg-gray-800">

    <h3 class="mb-4 text-xl font-bold dark:text-white">
        Company data
    </h3>
    <EditForm Model="@Model" OnValidSubmit="OnSave">
        <FluentValidationValidator @ref="_fluentValidationValidator"/>
        <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6 sm:col-span-3">
                <label for="first-name"
                       class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                    Membership number<span class="text-red-500">*</span>
                </label>
                <SfTextBox ID="MembershipId" Placeholder="Ex. 3134455443" maxlength="10" CssClass="@Tailwind.TextBox_General"
                           @bind-Value=@Model.MembershipId Readonly="true">
                </SfTextBox>
                <ValidationMessage For="() => Model.MembershipId" class="mt-2 text-sm text-red-600 dark:text-red-500"/>
            </div>

            <div class="col-span-6 sm:col-span-3">
                <label for="countries"
                       class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                    Job role
                </label>
                <SfTextBox ID="Job Role" Placeholder="Ex. Green" CssClass="@Tailwind.TextBox_General"
                           @bind-Value=@Model.JobRole>
                </SfTextBox>
            </div>
            <div class="col-span-6 sm:col-span-3">
                <label for="phone-number"
                       class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                    CAI
                </label>
                <SfTextBox ID="CAI" Placeholder="Ex. DRMD" maxlength="4" CssClass="@Tailwind.TextBox_General"
                           @bind-Value=@Model.CAI>
                </SfTextBox>
            </div>

            <div class="col-span-6 sm:col-span-3">
                <label for="countries"
                       class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                    Rank
                </label>
                <SfTextBox ID="Rank" Placeholder="Ex. Assistant Manager" CssClass="@Tailwind.TextBox_General"
                           @bind-Value=@Model.Rank>
                </SfTextBox>
            </div>

