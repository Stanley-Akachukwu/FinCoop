    <SfGrid ID="memberDataUpload" TValue="MemberBulkUploadTemp" EnablePersistence="false"
            DataSource="@ModelList"
            AllowPaging="true" AllowFiltering="true" AllowSelection="true" EnableAltRow="true"
            AllowResizing="true" ShowColumnChooser="true" ShowColumnMenu="true" Width="100%" Height="400"
            AllowExcelExport="true" AllowPdfExport="true" AllowTextWrap="false" AllowSorting="true"
            AllowMultiSorting="true" AllowGrouping="true" AllowReordering="true" AllowRowDragAndDrop="false">

        <GridPageSettings EnableQueryString="true" PageCount="10" PageSize="10" PageSizes="new int[] { 5, 10, 15, 20, 30, 50 }"></GridPageSettings>

        <GridEvents TValue="MemberBulkUploadTemp" OnActionComplete="ActionCompletedHandler" OnActionFailure="@ActionFailure"></GridEvents>

        <GridEditSettings AllowAdding="false" AllowEditing="true" AllowDeleting="false"
                          ShowDeleteConfirmDialog="false" Mode="EditMode.Dialog">
        </GridEditSettings>

        <GridFilterSettings Columns="@filterColumns" Type="Syncfusion.Blazor.Grids.FilterType.Menu" ShowFilterBarStatus="true">

        </GridFilterSettings>


        <GridColumns>

            <GridColumn Field=@nameof(MemberBulkUploadTemp.FirstName) HeaderText="FIRST NAME" AutoFit="true"></GridColumn>
            <GridColumn Field=@nameof(MemberBulkUploadTemp.LastName) HeaderText="LAST NAME" AutoFit="true"></GridColumn>
            <GridColumn Field=@nameof(MemberBulkUploadTemp.Gender) HeaderText="GENDER" AutoFit="true"></GridColumn>
            <GridColumn Field=@nameof(MemberBulkUploadTemp.Email) HeaderText="EMAIL" AutoFit="false"></GridColumn>
            <GridColumn Field=@nameof(MemberBulkUploadTemp.PhoneNumber) HeaderText="PHONE NO." AutoFit="false"></GridColumn>
            <GridColumn Field=@nameof(MemberBulkUploadTemp.MembershipNumber) HeaderText="MEMBERSHIP NO." AutoFit="false"></GridColumn>

            <GridColumn Field=@nameof(MemberBulkUploadTemp.UserRole) HeaderText="USER ROLE" AutoFit="false"></GridColumn>
            <GridColumn Field=@nameof(MemberBulkUploadTemp.Country) HeaderText="COUNTRY" AutoFit="false"></GridColumn>
            <GridColumn Field=@nameof(MemberBulkUploadTemp.Status) HeaderText="STATUS" AutoFit="false"></GridColumn>
            <GridColumn Field=@nameof(MemberBulkUploadTemp.DateCreated) HeaderText="DATE CREATED" AutoFit="false"></GridColumn>
            <GridColumn Field=@nameof(MemberBulkUploadTemp.IsSuccessfullyRegistered) HeaderText="REGISTRATION COMPLETED" AutoFit="false"></GridColumn>
        </GridColumns>

    </SfGrid>
    <div class="flex justify-between items-center pt-3 sm:pt-6">
        <div class="p-3">
            <button type="button" @onclick="@onApproval" class="inline-flex items-center p-2 text-sm font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 sm:ml-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                Approve
            </button>

        </div>
        <div class="flex-shrink-0 p-3">
            <a href="#"
               class="inline-flex items-center p-2 text-xs font-medium  rounded-lg text-gray-500 dark:text-gray-400 sm:text-sm hover:bg-gray-100 dark:text-primary-500 dark:hover:bg-gray-700">
                Total Users :@TotalRecord

            </a>
        </div>
    </div>
</div>