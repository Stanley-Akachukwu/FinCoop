<div class="p-12 justify-center items-center w-full bg-white rounded-lg shadow lg:flex  lg:max-w-xl dark:bg-gray-800">
    <div class="flex items-center mx-auto md:w-[42rem] px-4 md:px-8 xl:px-0">
        <div class="w-full">


            <h1 class=" mb-4 text-3xl font-bold leading-tight tracking-tight text-gray-900 sm:mb-6 dark:text-white">
                Forgot your password
            </h1>
            <h2 class=" mb-4 text-base font-normal leading-tight tracking-tight text-gray-500 sm:mb-6 dark:text-white">
                Just type in your email and we will send you a code to reset your password!
            </h2>
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 " role="alert">
                    <span class="font-medium"></span> @errorMessage
                </div>
            }

            <form class="mt-8 space-y-6">

                <div>
                    <label for="email"
                           class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                        Email
                    </label>
                    <input type="email"
                           @bind-value=Email
                           id="email"
                           class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                           placeholder="name@company.com"
                           required/>

                </div>


                <button type="button" @onclick="OnSendEmail" disabled="@ButtonDisabled"
                        class="py-3 px-5 w-full text-base font-medium text-center text-white rounded-lg bg-CEMCS-Blue-100 hover:bg-CEMCS-Blue-100 focus:ring-4 focus:ring-primary-300 dark:bg-CEMCS-Blue-100 dark:hover:bg-CEMCS-Blue-100 dark:focus:ring-primary-800">
                    @ButtonText
                </button>

            </form>
        </div>
    </div>
</div>

