<div class="p-12 justify-center items-center w-full bg-white rounded-lg shadow lg:flex  lg:max-w-xl dark:bg-gray-800">
    <div class="flex items-center mx-auto md:w-[42rem] px-4 md:px-8 xl:px-0">
        <div class="w-full">


            <h1 class=" mb-4 text-3xl font-bold leading-tight tracking-tight text-gray-900 sm:mb-6 dark:text-white">
                Enter Code
            </h1>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 " role="alert">
                    <span class="font-medium"></span> @errorMessage
                </div>
            }

            <form class="mt-8 space-y-6">

                <div id="otp" class="flex flex-row justify-between text-center px-2 mt-5">
                    <input id="Code_1" class="m-2 border bg-gray-50 border-gray-300 h-14 w-12 text-center form-control rounded"
                           @bind-value=@Code_1 maxlength="1" type="text" @oninput=OnInput_1/>
                    <input @bind-value=@Code_2 class="m-2 border bg-gray-50 border-gray-300 h-14 w-12 text-center form-control rounded" type="text" id="Code_2" maxlength="1" disabled="@disableCode_2" @oninput=OnInput_2/>
                    <input @bind-value=@Code_3 class="m-2 border bg-gray-50 border-gray-300 h-14 w-12 text-center form-control rounded" type="text" id="Code_3" maxlength="1" disabled="@disableCode_3" @oninput=OnInput_3/>
                    <input @bind-value=@Code_4 class="m-2 border bg-gray-50 border-gray-300 h-14 w-12 text-center form-control rounded" type="text" id="Code_4" maxlength="1" disabled="@disableCode_4" @oninput=OnInput_4/>
                    <input @bind-value=@Code_5 class="m-2 border bg-gray-50 border-gray-300 h-14 w-12 text-center form-control rounded" type="text" id="Code_5" maxlength="1" disabled="@disableCode_5" @oninput=OnInput_5/>
                    <input @bind-value=@Code_6 class="m-2 border bg-gray-50 border-gray-300 h-14 w-12 text-center form-control rounded" type="text" id="Code_6" maxlength="1" disabled="@disableCode_6" @oninput=OnInput_6/>
                </div>

                <div class="text-sm font-medium text-black dark:text-black">
                    Didnt receive code?
                    <a href="/ForgotPassword"
                       class="text-CEMCS-Blue-100 hover:underline dark:text-CEMCS-Blue-100" @onclick="OnResendOtp">
                        Resend
                    </a>
                </div>


                <button type="button" @onclick="OnSaveClose" disabled="@disableButton"
                        class="py-3 px-5 w-full text-base font-medium text-center text-white rounded-lg bg-CEMCS-Blue-100 hover:bg-CEMCS-Blue-100 focus:ring-4 focus:ring-primary-300 dark:bg-CEMCS-Blue-100 dark:hover:bg-CEMCS-Blue-100 dark:focus:ring-primary-800">
                    @ButtonText
                </button>

            </form>
        </div>
    </div>
</div>