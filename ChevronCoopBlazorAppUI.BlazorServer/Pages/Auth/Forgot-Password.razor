@page "/ForgotPassword"
@layout LoginLayout
@inject NavigationManager UriHelper
@if (showSendEmailForm)
{
    <SendEmailForm OnSendEmailRequestChanged="OnSendEmailRequestChangedHandler"></SendEmailForm>
}
@if (showValidateOtpForm)
{
    <ValidateOtpForm @bind-ForgetPassModel="SendEmailModel" OnValidateOtpChanged="OnValidateOtpChangedHandler"></ValidateOtpForm>
}
@if (showSendNewPasswordForm)
{
    <SendNewPasswordForm @bind-Model="ValidateModel"></SendNewPasswordForm>
}