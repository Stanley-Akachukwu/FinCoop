<EditForm Model="@Model">
    <FluentValidationValidator />


    <ValidationSummary />


    <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">

        @* <div class="sm:col-span-2">
        <label for="ParentId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
        Ledger Account
        </label>

        @{
        var combobox_Parent_res = $"{Config.ODATA_VIEWS_HOST}/{nameof(LedgerAccountMasterView)}";
        }
        <SfComboBox TValue="string" TItem="LedgerAccountMasterView" OnBlur="OnBlur" Readonly=true
        @bind-Value=@Model.LedgerAccountId Query="@Query_Combo"
        FilterType="Syncfusion.Blazor.DropDowns.FilterType.Contains"
        ShowClearButton="true" AllowFiltering=true IgnoreAccent=true Placeholder="Select ledger">
        <SfDataManager Url="@combobox_Parent_res" CrossDomain="true" Adaptor="Adaptors.ODataV4Adaptor"></SfDataManager>
        <ComboBoxFieldSettings Text="Name" Value="Id"></ComboBoxFieldSettings>
        </SfComboBox>


        </div>*@

        <div class="sm:col-span-2">

            <Descriptions Title="Bank Ledger Details" Bordered Size=@DescriptionsSize.Small>
                <DescriptionsItem Title="GL Account Name" Span="4">
                    @MasterView?.LedgerAccountId_Name
                </DescriptionsItem>
                <DescriptionsItem Title="GL Account Code" Span="2">@MasterView?.LedgerAccountId_Code</DescriptionsItem>
                <DescriptionsItem Title="GL Acct. Type" Span="2">@MasterView?.LedgerAccountId_AccountType</DescriptionsItem>
                <DescriptionsItem Title="Ledger Balance" Span="4">@MasterView?.LedgerAccountId_LedgerBalance?.ToString("n2")</DescriptionsItem>
            </Descriptions>

        </div>

        <div class="sm:col-span-2">
            <label for="AccountName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                Account Name
            </label>
            <SfTextBox Multiline="true" ID="AccountName" Placeholder="AccountName" CssClass="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
            @bind-Value=@Model.AccountName OnBlur="OnBlur">
            </SfTextBox>
        </div>

        <div class="w-full">
            <label for="AccountNo" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                Account No
            </label>
            <SfTextBox Multiline="false" ID="AccountNo" Placeholder="AccountNo" CssClass="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
            @bind-Value=@Model.AccountNumber OnBlur="OnBlur">
            </SfTextBox>
        </div>

        <div class="w-full">
            <label for="AccountBVN" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                Account BVN
            </label>
            <SfTextBox Multiline="false" ID="AccountBVN" Placeholder="AccountBVN" CssClass="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
            @bind-Value=@Model.BVN OnBlur="OnBlur">
            </SfTextBox>
        </div>


        <div class="w-full">
            <label for="CurrencyId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                Select currency
            </label>
            @{
                var combobox_Currency_res = $"{Config.ODATA_VIEWS_HOST}/{nameof(CurrencyMasterView)}";
            }
            <SfComboBox TValue="string" TItem="CurrencyMasterView" OnBlur="OnBlur"
            @bind-Value=@Model.CurrencyId Query="@Query_Combo"
                        FilterType="Syncfusion.Blazor.DropDowns.FilterType.Contains"
                        ShowClearButton="true" AllowFiltering=true IgnoreAccent=true Placeholder="Select currency">
                <SfDataManager Url="@combobox_Currency_res" CrossDomain="true" Adaptor="Adaptors.ODataV4Adaptor"></SfDataManager>
                <ComboBoxFieldSettings Text="Name" Value="Id"></ComboBoxFieldSettings>
            </SfComboBox>


        </div>

        <div class="w-full">
            <label for="BankId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                Select Bank
            </label>
            @{
                var combobox_Bank_res = $"{Config.ODATA_VIEWS_HOST}/{nameof(BankMasterView)}";
            }
            <SfComboBox TValue="string" TItem="BankMasterView" OnBlur="OnBlur"
            @bind-Value=@Model.BankId Query="@Query_Combo"
                        FilterType="Syncfusion.Blazor.DropDowns.FilterType.Contains"
                        ShowClearButton="true" AllowFiltering=true IgnoreAccent=true Placeholder="Select bank">
                <SfDataManager Url="@combobox_Bank_res" CrossDomain="true" Adaptor="Adaptors.ODataV4Adaptor"></SfDataManager>
                <ComboBoxFieldSettings Text="Name" Value="Id"></ComboBoxFieldSettings>
            </SfComboBox>
        </div>


        <div class="sm:col-span-2">
            <label for="BranchName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                Branch Name
            </label>
            <SfTextBox Multiline="false" ID="BranchName" Placeholder="BranchName" CssClass="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
            @bind-Value=@Model.BranchName OnBlur="OnBlur">
            </SfTextBox>
        </div>


        <div class="sm:col-span-2">
            <label for="BranchAddress" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                Branch Address
            </label>
            <SfTextBox Multiline="false" ID="BranchAddress" Placeholder="BranchAddress" CssClass="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
            @bind-Value=@Model.BranchAddress OnBlur="OnBlur">
            </SfTextBox>
        </div>


        <div class="sm:col-span-2">
            <label for="Description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                Description
            </label>
            <SfTextBox Multiline="true" ID="Description" Placeholder="Description" CssClass="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
            @bind-Value=@Model.Description OnBlur="OnBlur">
            </SfTextBox>
        </div>


        <div class="w-full">
            <label for="IsActive" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                Is Active
            </label>

            <SfSwitch ID="IsActive" @bind-Checked="@Model.IsActive" @onblur="@OnBlur" />
        </div>


    </div>
    <br />


    <button type="button" @onclick="OnSave"
            class="text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        Save
    </button>
    <button type="button" @onclick="OnCancel"
            class="py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-full border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
        Cancel
    </button>

</EditForm>


<Modal Title="@("Notification")" Visible="@showPopup" DestroyOnClose="true"
       OnOk="OnCancel" OkText="@("Ok")"
       OnCancel="OnCancel" CancelText="@("Cancel")">
    <p>@notificationText</p>
</Modal>