<div class="p-4 mb-4 bg-white rounded-lg shadow sm:p-6 xl:p-8 dark:bg-gray-800">
    <h3 class="mb-4 text-xl font-bold dark:text-white">
        Guarantor Information
    </h3>

    <div class="grid grid-cols-6 gap-6">
        <div class="col-span-6 sm:col-full">
            <div class="">

                <form action="">
                    <div class="grid grid-cols-6 gap-6">


                        <div class="col-span-6 sm:col-span-3">
                            <div class="flex items-center  gap-8">
                                <h2 class=" text-sm font-medium text-gray-900 dark:text-white">Guarantor required</h2>
                                @if (Model.IsGuarantorRequired)
                                {
                                    <p>Yes</p>
                                }
                                else
                                {
                                    <p>No</p>
                                }
                            </div>

                        </div>
                        <div class="col-span-6 sm:col-span-3">
                            <div class="flex items-center  gap-8">
                                <h2 class=" text-sm font-medium text-gray-900 dark:text-white">Min years of service to require guarantor</h2>
                                <p>@Model.GuarantorMinYear</p>
                            </div>

                        </div>
                        <div class="col-span-6 sm:col-span-3">
                            <div class="flex items-center  gap-8">
                                <h2 class=" text-sm font-medium text-gray-900 dark:text-white">Amount limit</h2>
                                <p>@Model.GuarantorAmountLimit</p>
                            </div>

                        </div>
                        <div class="col-span-6 sm:col-span-3">
                            <div class="flex items-center  gap-8">
                                <h2 class=" text-sm font-medium text-gray-900 dark:text-white">Number of guarantors (employess)</h2>
                                <p>@Model.EmployeeGuarantorCount</p>
                            </div>

                        </div>

                        <div class="col-span-6 sm:col-span-3">
                            <div class="flex items-center  gap-8">
                                <h2 class=" text-sm font-medium text-gray-900 dark:text-white">Number of guarantors (non-employees)</h2>
                                <p>@Model.NonEmployeeGuarantorCount</p>
                            </div>

                        </div>
                    </div>
                </form>
            </div>

        </div>


    </div>

</div>


<div class="col-span-6 sm:col-span-3 flex gap-2 mt-2">
    <div class="col-span-3 sm:col-span-3">
        <a href="javascript: void(0)" @onclick=OnPrevious>
            <button class="text-CEMCS-Blue-100 border border-CEMCS-Blue-100 bg-white hover:bg-white focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                Back
            </button>
        </a>

    </div>
    <div class="col-span-3 sm:col-span-3">
        <a href="javascript: void(0)" @onclick=OnProceed>
            <button class="text-white bg-CEMCS-Blue-100 hover:bg-CEMCS-Blue-100 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                Next
            </button>
        </a>

    </div>
</div>

