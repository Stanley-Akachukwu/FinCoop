<div class="p-4 mb-4 bg-white rounded-lg shadow sm:p-6 xl:p-8 dark:bg-gray-800">
    <h3 class="mb-4 text-xl font-bold dark:text-white">
        Target Setup
    </h3>

    <div class="grid grid-cols-6 gap-6">
        <div class="col-span-6 sm:col-full">
            <form action="">
                <div class="grid grid-cols-6 gap-6">


                    <div class="col-span-6 sm:col-span-3">
                        <div class="flex items-center  gap-8">
                            <h2 class=" text-sm font-medium text-gray-900 dark:text-white">Is it a target loan</h2>
                            @if (Model.IsTargetLoan)
                            {
                                <p>Yes</p>
                            }
                            else
                            {
                                <p>No</p>
                            }

                        </div>

                    </div>
                    <div class="col-span-6 sm:col-span-3">
                        <div class="flex items-center  gap-8">
