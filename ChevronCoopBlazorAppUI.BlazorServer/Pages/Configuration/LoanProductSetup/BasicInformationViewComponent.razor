<div class="p-4 mb-4 bg-white rounded-lg shadow sm:p-6 xl:p-8 dark:bg-gray-800">
    <h3 class="mb-4 text-xl font-bold dark:text-white">
        Basic Information
    </h3>
    <form action="">
        <div class="grid grid-cols-6 gap-6">


            <div class="col-span-6 sm:col-span-3">
                <div class="flex items-center  gap-8">
                    <h2 class=" text-sm font-medium text-gray-900 dark:text-white">Loan Code</h2>
                    <p>@Model.Code</p>
                </div>

            </div>
            <div class="col-span-6 sm:col-span-3">
                <div class="flex items-center  gap-8">
                    <h2 class=" text-sm font-medium text-gray-900 dark:text-white">Loan Name</h2>
                    <p>@Model.Name</p>
                </div>

            </div>
            <div class="col-span-6 sm:col-span-3">
                <div class="flex items-center  gap-8">
                    <h2 class=" text-sm font-medium text-gray-900 dark:text-white">Loan Description</h2>
                    <p>@Model.Description</p>
                </div>

            </div>
            <div class="col-span-6 sm:col-span-3">
                <div class="flex items-center  gap-8">
                    <h2 class=" text-sm font-medium text-gray-900 dark:text-white">Member Type</h2>
                    @foreach (var item in Model.MemberTypes)
                    {
                        <p>@item</p>
                    }

                </div>

            </div>

            <div class="col-span-6 sm:col-span-3">
                <div class="flex items-center  gap-8">
                    <h2 class=" text-sm font-medium text-gray-900 dark:text-white">Currency</h2>
                    <p>@Model.CurrencyName</p>
                </div>

            </div>
        </div>
    </form>
</div>


