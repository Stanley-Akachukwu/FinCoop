<div class="p-4 mb-4 bg-white rounded-lg shadow sm:p-6 xl:p-8 dark:bg-gray-800">
    <h3 class="mb-4 text-xl font-bold dark:text-white">
        Disbursement Charge
    </h3>
    <form action="">
        <div class="grid grid-cols-6 gap-6">


            <div class="col-span-6 sm:col-span-3">
                <div class="flex items-center  gap-8">
                    <h2 class=" text-sm font-medium text-gray-900 dark:text-white">Enable Disbursement Charge</h2>
                    @if (Model.HasAdminCharges)
                    {
                        <p>Yes</p>
                    }
                    else
                    {
                        <p>No</p>
                    }

                </div>

            </div>
            @if (Model.DisbursementCharges.Count > 0 && Model.HasAdminCharges)
            {
                <div class="col-span-6 sm:col-span-3">
                    <div class="flex items-center  gap-8">
                        <h2 class=" text-sm font-medium text-gray-900 dark:text-white">Disbursement Charge</h2>
                        <div class="overflow-hidden">
                            <table class="min-w-full text-left text-sm font-light">
                                <thead class="border-b font-medium dark:border-neutral-500">
                                    <tr>
                                        <th scope="col" class="px-6 py-4">Name</th>
                                        <th scope="col" class="px-6 py-4">Code</th>
                                        <th scope="col" class="px-6 py-4">Charge</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.DisbursementCharges)
                                    {
                                        <tr class="border-b dark:border-neutral-500">
                                            <td class="whitespace-nowrap px-6 py-4">@item.Name</td>
                                            <td class="whitespace-nowrap px-6 py-4">@item.Code</td>
                                            <td class="whitespace-nowrap px-6 py-4">@item.Amount.ToString("N")</td>
                                        </tr>


                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>

                </div>
            }
         


        </div>
    </form>
</div>


