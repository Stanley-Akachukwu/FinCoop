@page "/ProductSetup/view/{id}"
@using ChevronCoop.Web.AppUI.BlazorServer.Pages.Configuration.ProductSetup.DetailsComp

<main>

    <div class="px-4 pt-6">
        <div class="col-span-3 sm:col-span-3 mb-6 flex gap-2  items-center">
            <NavLink href="/ProductSetup/Manage/all">
                <button class="text-CEMCS-Blue-100 border border-CEMCS-Blue-100 bg-white hover:bg-white focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
                        type="submit">
                    <svg class="inline mr-1" width="14" height="12" viewBox="0 0 14 12" fill="none"
                         xmlns="http://www.w3.org/2000/svg">
                        <path d="M1 5.99967H13Z" fill="#1F82BD" />
                        <path d="M5.66667 10.6663L1 5.99967M1 5.99967L5.66667 1.33301M1 5.99967H13" stroke="#1F82BD"
                              stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg> Back
                </button>
            </NavLink>
            <h1 class="font-semibold">
                @Model.Name
            </h1>
        </div>



        <!-- Request Tabs -->

        <div class="w-full flex items-center shadow mb-3 sm:gap-0 gap-8 bg-white  sm:rounded-lg p-4 flex-wrap">
            <div class="flex sm:flex-row flex-col gap-2 justify-start items-center grow-0 shrink-0 sm:basis-1/3 sm:max-w-1/3 basis-full  max-w-1/3 ">
                <div class="flex flex-col items-center justify-center">
                    <div class="md:text-left text-center">
                        <h3 class="text-base text-gray-500 ">Total Accounts</h3>
                        <p class="font-semibold text-xl">
                            <TotalRows Total="TotalAccounts"></TotalRows>
                        </p>
                    </div>

                </div>
            </div>
            <div class="flex flex-col justify-center items-center  border-r-2 border-l-2 border-gray-200 grow-0 shrink-0 sm:basis-1/3 sm:max-w-1/3 basis-full  max-w-1/3">
                <div class="md:text-left text-center ">
                    <h3 class="text-base text-gray-500">Total Account Balance</h3>
                    <p class="font-semibold text-xl">
                        <AmountComp amount="@TotalMembersBalance" symbol="₦"></AmountComp>
                    </p>
                </div>
            </div>
            <div class="flex flex-col justify-center items-center grow-0 shrink-0 sm:basis-1/3 sm:max-w-1/3 basis-full  max-w-1/3">
                <div class="md:text-left text-center ">
                    <h3 class="text-base text-gray-500">Approval Status</h3>
                    <p class="font-semibold text-xl">@Model.ApprovalId_Status</p>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 px-2 pt-6 xl:grid-cols-9 xl:gap-2 xl:space-x-10 dark:bg-gray-900">

            <div class="col-span-2 mb-4">
                <div class="bg-white  rounded-lg shadow   dark:bg-gray-800">
                    <a @onclick='(() => ChangeMenu("dashboard", nameof(DefaultMenu1)))'>
                        <div class="items-start bg-blue-200 cursor-pointer justify-center p-4 flex flex-col xl:block 2xl:flex sm:space-x-4 xl:space-x-0 2xl:space-x-4 ">
                            <h3 class=" text-gray-900 font-semibold text-base">
                                <svg class="inline mr-1" width="24" height="24" viewBox="0 0 24 24" fill="none"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                          d="M6.0001 3.6001C5.36358 3.6001 4.75313 3.85295 4.30304 4.30304C3.85295 4.75313 3.6001 5.36358 3.6001 6.0001V18.0001C3.6001 18.6366 3.85295 19.2471 4.30304 19.6972C4.75313 20.1472 5.36358 20.4001 6.0001 20.4001H18.0001C18.6366 20.4001 19.2471 20.1472 19.6972 19.6972C20.1472 19.2471 20.4001 18.6366 20.4001 18.0001V6.0001C20.4001 5.36358 20.1472 4.75313 19.6972 4.30304C19.2471 3.85295 18.6366 3.6001 18.0001 3.6001H6.0001ZM16.8001 8.4001C16.8001 8.08184 16.6737 7.77661 16.4486 7.55157C16.2236 7.32653 15.9184 7.2001 15.6001 7.2001C15.2818 7.2001 14.9766 7.32653 14.7516 7.55157C14.5265 7.77661 14.4001 8.08184 14.4001 8.4001V15.6001C14.4001 15.9184 14.5265 16.2236 14.7516 16.4486C14.9766 16.6737 15.2818 16.8001 15.6001 16.8001C15.9184 16.8001 16.2236 16.6737 16.4486 16.4486C16.6737 16.2236 16.8001 15.9184 16.8001 15.6001V8.4001ZM13.2001 10.8001C13.2001 10.4818 13.0737 10.1766 12.8486 9.95157C12.6236 9.72653 12.3184 9.6001 12.0001 9.6001C11.6818 9.6001 11.3766 9.72653 11.1516 9.95157C10.9265 10.1766 10.8001 10.4818 10.8001 10.8001V15.6001C10.8001 15.9184 10.9265 16.2236 11.1516 16.4486C11.3766 16.6737 11.6818 16.8001 12.0001 16.8001C12.3184 16.8001 12.6236 16.6737 12.8486 16.4486C13.0737 16.2236 13.2001 15.9184 13.2001 15.6001V10.8001ZM9.6001 14.4001C9.6001 14.0818 9.47367 13.7766 9.24863 13.5516C9.02358 13.3265 8.71836 13.2001 8.4001 13.2001C8.08184 13.2001 7.77661 13.3265 7.55157 13.5516C7.32653 13.7766 7.2001 14.0818 7.2001 14.4001V15.6001C7.2001 15.9184 7.32653 16.2236 7.55157 16.4486C7.77661 16.6737 8.08184 16.8001 8.4001 16.8001C8.71836 16.8001 9.02358 16.6737 9.24863 16.4486C9.47367 16.2236 9.6001 15.9184 9.6001 15.6001V14.4001Z"
                                          fill="#07579D" />
                                </svg> Dashboard
                            </h3>
                        </div>
                    </a>
                 
                    <a @onclick='(() => ChangeMenu("chartofaccount", nameof(DefaultMenu4)))'>

                        <div class="items-start hover:bg-blue-200 cursor-pointer justify-center p-4 flex flex-col xl:block 2xl:flex sm:space-x-4 xl:space-x-0 2xl:space-x-4 border">
                            <h3 class=" text-gray-900 font-semibold text-base">
                                <svg class="inline mr-1" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M13 7H21M21 7V15M21 7L13 15L9 11L3 17" stroke="#6B7280" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                GL Details
                            </h3>

                        </div>
                    </a>

                    <a @onclick='(() => ChangeMenu("customers", nameof(DefaultMenu2)))'>
                        <div class="items-start hover:bg-blue-200 cursor-pointer justify-center p-4 flex flex-col xl:block 2xl:flex sm:space-x-4 xl:space-x-0 2xl:space-x-4 border">
                            <h3 class=" text-gray-900 font-semibold text-base">

                                <svg class="inline mr-1" width="24" height="24" viewBox="0 0 24 24" fill="none"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path d="M5.9998 14.3998C5.9998 14.7181 6.12623 15.0233 6.35128 15.2484C6.57632 15.4734 6.88155 15.5998 7.1998 15.5998C7.51806 15.5998 7.82329 15.4734 8.04833 15.2484C8.27338 15.0233 8.3998 14.7181 8.3998 14.3998V7.69664L9.95141 9.24824C10.1777 9.46683 10.4808 9.58778 10.7955 9.58505C11.1101 9.58232 11.4111 9.45611 11.6336 9.23362C11.8561 9.01113 11.9823 8.71016 11.985 8.39552C11.9877 8.08089 11.8668 7.77776 11.6482 7.55144L8.0482 3.95144C7.82317 3.72648 7.518 3.6001 7.1998 3.6001C6.88161 3.6001 6.57644 3.72648 6.35141 3.95144L2.7514 7.55144C2.53282 7.77776 2.41186 8.08089 2.4146 8.39552C2.41733 8.71016 2.54353 9.01113 2.76602 9.23362C2.98851 9.45611 3.28949 9.58232 3.60412 9.58505C3.91876 9.58778 4.22188 9.46683 4.4482 9.24824L5.9998 7.69664V14.3998ZM17.9998 9.59984C17.9998 9.28158 17.8734 8.97636 17.6483 8.75131C17.4233 8.52627 17.1181 8.39984 16.7998 8.39984C16.4815 8.39984 16.1763 8.52627 15.9513 8.75131C15.7262 8.97636 15.5998 9.28158 15.5998 9.59984V16.303L14.0482 14.7514C13.8219 14.5329 13.5188 14.4119 13.2041 14.4146C12.8895 14.4174 12.5885 14.5436 12.366 14.7661C12.1435 14.9885 12.0173 15.2895 12.0146 15.6042C12.0119 15.9188 12.1328 16.2219 12.3514 16.4482L15.9514 20.0482C16.1764 20.2732 16.4816 20.3996 16.7998 20.3996C17.118 20.3996 17.4232 20.2732 17.6482 20.0482L21.2482 16.4482C21.4668 16.2219 21.5877 15.9188 21.585 15.6042C21.5823 15.2895 21.4561 14.9885 21.2336 14.7661C21.0111 14.5436 20.7101 14.4174 20.3955 14.4146C20.0808 14.4119 19.7777 14.5329 19.5514 14.7514L17.9998 16.303V9.59984Z"
                                          fill="#6B7280" />
                                </svg>Accounts
                            </h3>

                        </div>
                    </a>


                    <a @onclick='(() => ChangeMenu("applications", nameof(DefaultMenu3)))'>
                        <div class="items-start hover:bg-blue-200 cursor-pointer justify-center p-4 flex flex-col xl:block 2xl:flex sm:space-x-4 xl:space-x-0 2xl:space-x-4 border">
                            <h3 class=" text-gray-900 font-semibold text-base">

                                <svg class="inline mr-1" width="24" height="24" viewBox="0 0 24 24" fill="none"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                          d="M11.9999 21.5999C14.546 21.5999 16.9878 20.5885 18.7881 18.7881C20.5885 16.9878 21.5999 14.546 21.5999 11.9999C21.5999 9.45382 20.5885 7.01203 18.7881 5.21168C16.9878 3.41133 14.546 2.3999 11.9999 2.3999C9.45382 2.3999 7.01203 3.41133 5.21168 5.21168C3.41133 7.01203 2.3999 9.45382 2.3999 11.9999C2.3999 14.546 3.41133 16.9878 5.21168 18.7881C7.01203 20.5885 9.45382 21.5999 11.9999 21.5999ZM8.3999 10.7999C8.08164 10.7999 7.77642 10.9263 7.55137 11.1514C7.32633 11.3764 7.1999 11.6816 7.1999 11.9999C7.1999 12.3182 7.32633 12.6234 7.55137 12.8484C7.77642 13.0735 8.08164 13.1999 8.3999 13.1999H15.5999C15.9182 13.1999 16.2234 13.0735 16.4484 12.8484C16.6735 12.6234 16.7999 12.3182 16.7999 11.9999C16.7999 11.6816 16.6735 11.3764 16.4484 11.1514C16.2234 10.9263 15.9182 10.7999 15.5999 10.7999H8.3999Z"
                                          fill="#6B7280" />
                                </svg>Applications
                            </h3>

                        </div>
                    </a>

                   

                    <a @onclick='(() => ChangeMenu("edit", nameof(DefaultMenu5)))'>

                        <div class="items-start hover:bg-blue-200 cursor-pointer justify-center p-4 flex flex-col xl:block 2xl:flex sm:space-x-4 xl:space-x-0 2xl:space-x-4 border">
                            <h3 class=" text-gray-900 font-semibold text-base">
                                <svg class="inline mr-1" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M13 7H21M21 7V15M21 7L13 15L9 11L3 17" stroke="#6B7280" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>

                                Edit
                            </h3>

                        </div>
                    </a>

                </div>
            </div>

            <div class="col-span-7">

                @if (MenuToShow == "dashboard")
                {
                    <Details Model="@Model"/>
                }
                else if (MenuToShow == "customers")
                {
                    <ProductCustomers Model="@Model"/>
                }
                else if (MenuToShow == "chartofaccount")
                {
                    <GLAccount Model="@Model" />
                }
                else if (MenuToShow == "applications")
                {
                    <ProductApplications Model="@Model" />
                }
                else if (MenuToShow == "edit")
                {
                    <EditProduct EditModel="@Model" />
                }

            </div>

           
        </div>

    </div>

   

</main>


