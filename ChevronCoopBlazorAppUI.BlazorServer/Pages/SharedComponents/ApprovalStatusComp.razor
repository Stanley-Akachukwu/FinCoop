
@{
    if (approvalName == ApprovalStatus.INITIATED.ToString())
    {
        <span class="bg-purple-100 dark:bg-purple-200 text-purple-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-md">
            @approvalName
        </span>
    }
    else if (approvalName == ApprovalStatus.PENDING_APPROVAL.ToString())
    {
        <span class="bg-purple-100 dark:bg-purple-200 text-purple-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-md">
            @approvalName
        </span>
    }
    else if (approvalName == "PENDING APPROVAL")
    {
        <span class="bg-purple-100 dark:bg-purple-200 text-purple-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-md">
            @approvalName
        </span>
    }
   

    else if (approvalName == ApprovalStatus.APPROVED.ToString())
    {
        <span class="bg-green-100 dark:bg-green-200 text-green-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-md">
            @approvalName
        </span>
    }
    else if (approvalName == ApprovalStatus.REJECTED.ToString())
    {
        <span class="bg-red-100 dark:bg-red-200 text-red-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-md">
            @approvalName
        </span>
    }
    else
    {
        <span class="bg-purple-100 dark:bg-purple-200 text-purple-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-md">
            @approvalName
        </span>
    }

}
 

@code {

    [Parameter] public string approvalName { get; set; }

}
