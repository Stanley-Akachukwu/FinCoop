@page
@using ChevronCoop.Web.AppUI.BlazorServer.Pages.SharedComponents;
@model ChevronCoop.Web.AppUI.BlazorServer.Areas.Identity.Pages.Account.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Log in";
	Layout = null;
}


<!doctype html>
<html lang="en" class="dark">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Chervon">
	<meta name="author" content="Themesberg">
	<meta name="generator" content="Hugo 0.79.0">

	<title>Account-Login</title>

	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="~/js/libs/flowbite/app.css">
	<link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
	<link rel="icon" type="image/png" href="../../favicon.ico">
	<link rel="manifest" href="../../site.webmanifest">
	<link rel="mask-icon" href="../../safari-pinned-tab.svg" color="#5bbad5">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
	<meta name="msapplication-TileColor" content="#ffffff">
	<meta name="theme-color" content="#ffffff">
	<!-- Twitter -->
	<meta name="twitter:card" content="summary">
	<meta name="twitter:title" content="Tailwind CSS Sign in/Login Page - Flowbite">
	<meta name="twitter:description" content="Chervon">
	<meta name="twitter:image" content="~/images/og-image.jpg">

	<!-- Facebook -->
	<meta property="og:url" content="~/authentication/sign-in/">
	<meta property="og:title" content="Tailwind CSS Sign in/Login Page - Flowbite">
	<meta property="og:description" content="Chervon">
	<meta property="og:type" content="article">
	<meta property="og:image" content="~/images/og-image.jpg">
	<meta property="og:image:type" content="image/png">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

	<script>

		if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
			document.documentElement.classList.add('dark');
		} else {
			document.documentElement.classList.remove('dark')
		}


	</script>
	<style>
		.password-container {
		 
			position: relative;
		}

			.password-container input[type="password"],
			.password-container input[type="text"] {
				width: 100%;
				padding: 12px 36px 12px 12px;
				box-sizing: border-box;
			}

		.fa-eye {
			position: absolute;
			top: 59%;
			right: 4%;
			cursor: pointer;
			color: lightgray;
		}
	</style>
</head>
<body class="bg-gray-50 dark:bg-gray-800">
	<main class="bg-gray-50 dark:bg-gray-900 hello-ozzy">
		@if (Model.isLoading)
		{
					<div class="flex items-center justify-center h-screen">
						<img src="/images/chevron/landingpage/logo.svg" width="150" alt="Chevron Coop" />
						<Spin size="large" />
					</div>

    }
    else
    {
		<div class="flex flex-col justify-center items-center px-6 pt-8 mx-auto md:h-screen pt:mt-0 dark:bg-gray-900">
			<div class="mb-8"><img src="~/images/chevron/landingpage/logo.svg" /></div>
			<div class="justify-center items-center w-full bg-white rounded-lg shadow lg:flex md:mt-0 lg:max-w-screen-md 2xl:max:max-w-screen-md xl:p-0 dark:bg-gray-800">

				<div class="p-6 space-y-8 w-full sm:p-8 lg:p-16 py-6 lg:py-8">
					<div class="justify-center items-center lg:flex">
						<h2 class="text-2xl font-bold text-gray-900 lg:text-3xl dark:text-white">
							Login
						</h2>
					</div>
					<div class="justify-center items-center lg:flex">
						<Card size="small" class="error">
							<p style="color:red">
								<div asp-validation-summary="ModelOnly" style="color:red" class="justify-center items-center lg:flex text-2xl text-rose-800" role="alert"></div>
							</p>
						</Card>
					</div>
					<form class="mt-8 space-y-6" id="account" method="post">
						<div>
							<label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>

							<input asp-for="Input.Email" autocomplete="off" id="email" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="email" required />
						</div>
				
						<div class="password-container">
							<label for="password" autocomplete="off" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
						
							<input asp-for="Input.Password" Type="password" id="password" placeholder="••••••••" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" required />

							<i class="fa-solid fa-eye" id="eye"></i>
						</div>
					 
					 
						<div class="flex items-start">
						</div>

						
						<button type="submit" id="buttonText" class="py-3 px-5 w-full text-base font-medium text-center text-white rounded-lg bg-CEMCS-Blue-100 hover:bg-CEMCS-Blue-100 focus:ring-4 focus:ring-primary-300  dark:bg-CEMCS-Blue-100 dark:hover:bg-CEMCS-Blue-100 dark:focus:ring-primary-800">
							<span>Login</span>
							<div id="spinnerid" hidden class="spinner-border" role="status">
								<span class="sr-only">Loading...</span>
							</div>

						</button>

						
						<div class="sm\:text-xl font-large text-black dark:text-black text-center">
							Don't have an account? <a href="/selectcoop" class="text-CEMCS-Blue-100  text-lg-center hover:underline dark:text-CEMCS-Blue-100">Create a cooperative account</a>
						</div>
						<div class="sm\:text-xl font-large text-black dark:text-black text-center">
							<a href="/ForgotPassword" class="text-CEMCS-Blue-100  text-lg-center hover:underline dark:text-CEMCS-Blue-100">Forgot Password?</a>
						</div>
					</form>
				</div>
			</div>
		</div>
}
	</main>

	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

	<script>
		document.addEventListener('DOMContentLoaded', function () {
			const form = document.getElementById('account');
			const buttonText = document.getElementById('buttonText');
			const spinner = document.getElementById('spinnerid');

			form.addEventListener('submit', function () {
				// Show the spinner and disable the button
				spinner.removeAttribute('hidden');
				buttonText.disabled = true;

			});
		});
	</script>

	<script>
		const password = document.querySelector("#password")
		const togglePassword = document.querySelector("#eye");

		togglePassword.addEventListener('click', function (e) {
					// toggle the type attribute
					const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
					password.setAttribute('type', type);
					// toggle the eye slash icon
					this.classList.toggle('fa-eye-slash');
				});

		</script>
</body>
</html>
